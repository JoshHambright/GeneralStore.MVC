@model IEnumerable<GeneralStore.MVC.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(" Add Customer", "Create", "Customer", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-plus" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>


@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.CustomerID }, new { @class = "glyphicon glyphicon-edit" })
            @Html.ActionLink(" ", "Details", new { id = item.CustomerID }, new { @class = " glyphicon glyphicon-info-sign" })
            @Html.ActionLink(" ", "Delete", new { id = item.CustomerID }, new { @class = " glyphicon glyphicon-trash" })
        </td>
    </tr>
}

</table>
