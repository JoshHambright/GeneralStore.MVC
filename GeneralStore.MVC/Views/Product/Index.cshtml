@model IEnumerable<GeneralStore.MVC.Models.Product>

@{
    ViewBag.Title = "Create";
}

<h2>List of Product</h2>

<p>
    @Html.ActionLink(" Add Product", "Create","Product", htmlAttributes: new { @class = "btn btn-success glyphicon glyphicon-plus" })

</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFood)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.InventoryCount)
            </td>
            <td>
                @Html.DisplayFor(model => item.Price)
            </td>
            <td>
                @Html.DisplayFor(model => item.IsFood)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.ProductID }, new { @class = "glyphicon glyphicon-edit" })
                @Html.ActionLink(" ", "Details", new { id = item.ProductID }, new { @class = " glyphicon glyphicon-info-sign" })
                @Html.ActionLink(" ", "Delete", new { id = item.ProductID }, new { @class = " glyphicon glyphicon-trash" })
            </td>
        </tr>
    }
</table>

